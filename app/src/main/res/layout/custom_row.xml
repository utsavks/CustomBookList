<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:id="@+id/imView"
        android:src="@drawable/angels_and_demons"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAllCaps="true"
        android:text="Name"
        android:id="@+id/tvName"
        android:layout_alignTop="@+id/imView"
        android:layout_toRightOf="@+id/imView"
        android:layout_toEndOf="@+id/imView" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Author"
        android:textColor="#888888"
        android:id="@+id/tvAuth"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/tvName"
        android:layout_alignLeft="@+id/tvName"
        android:layout_alignStart="@+id/tvName" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Publisher"
        android:textColor="#888888"
        android:id="@+id/tvPub"
        android:layout_below="@id/tvAuth"
        android:layout_alignLeft="@+id/tvAuth"
        android:layout_alignStart="@+id/tvAuth" />
</RelativeLayout>